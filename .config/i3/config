
#--------------------------------------------------------
# i3

set $mod Mod1
font pango:monospace 8
floating_modifier $mod

#--------------------------------------------------------






#--------------------------------------------------------
# i3 Gaps

gaps inner 10
gaps outer 10

new_window pixel 3

#--------------------------------------------------------







#--------------------------------------------------------
# On Startup

exec_always ~/.scripts/screenlayout/arandr_layout.sh
exec ~/.scripts/resolution/set_resolution.sh ":)"
exec python3 ~/.scripts/redshift/relative_change.py -r
exec amixer -D pulse sset Master 50%
exec ~/.scripts/polybar/launch_polybar.sh
exec sleep 1s && feh --bg-fill ~/Pictures/Wallpapers/wallpaper.jpg
exec_always nm-applet
exec --no-startup-id ~/.scripts/battery_screen_flash/flash_screen.sh
#--------------------------------------------------------







#--------------------------------------------------------
# Keybindings



### Apps
bindsym $mod+Shift+s exec spotify
bindsym $mod+Tab exec google-chrome-stable
bindsym $mod+t exec thunar
bindsym $mod+Return exec urxvt



### Commands
bindsym --release Mod4+Shift+q exec xkill
#bindsym Mod4+1 exec rofi -combi-modi run -show combi -theme solarized
bindsym Mod4+1 exec rofi -run-list-command ". ~/.scripts/get_aliases.sh" -run-command "/bin/bash -i -c '{cmd}'" -show run
bindsym Mod4+Shift+l exec ~/.scripts/sleep/sleep.sh
bindsym --release Print exec import ~/Pictures/Screenshots/$(date '+%Y:%m:%d_%H:%M:%S').png
bindsym $mod+p exec kazam



### Audio controls
#bindsym $mod+XF86AudioRaiseVolume exec amixer -D pulse set Master 1+ unmute & amixer sset 'Master' 20%+
#bindsym XF86AudioRaiseVolume exec amixer -D pulse set Master 1+ unmute & amixer sset 'Master' 5%+
#bindsym $mod+XF86AudioLowerVolume exec amixer -D pulse set Master 1+ unmute & amixer sset 'Master' 20%-
#bindsym XF86AudioLowerVolume exec amixer -D pulse set Master 1+ unmute & amixer sset 'Master' 5%-
#bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle
#bindsym $mod+XF86AudioMute exec amixer -D pulse set Master 1+ toggle

bindsym $mod+XF86AudioRaiseVolume exec ~/.scripts/volume/set_volume.sh + 20%     amixer -D pulse set Master 1+ unmute & amixer sset 'Master' 20%+
bindsym XF86AudioRaiseVolume exec ~/.scripts/volume/set_volume.sh + 5%            amixer -D pulse set Master 1+ unmute & amixer sset 'Master' 5%+
bindsym $mod+XF86AudioLowerVolume exec ~/.scripts/volume/set_volume.sh - 20%          amixer -D pulse set Master 1+ unmute & amixer sset 'Master' 20%-
bindsym XF86AudioLowerVolume exec ~/.scripts/volume/set_volume.sh - 5%           amixer -D pulse set Master 1+ unmute & amixer sset 'Master' 5%-
bindsym XF86AudioMute exec ~/.scripts/volume/set_volume.sh toggle-mute             amixer -D pulse set Master 1+ toggle
bindsym $mod+XF86AudioMute exec ~/.scripts/volume/set_volume.sh toggle-mute                 amixer -D pulse set Master 1+ toggle



### Display controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 2
bindsym $mod+XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 2
bindsym $mod+XF86MonBrightnessDown exec xbacklight -dec 20

bindsym Mod4+XF86MonBrightnessUp exec python3 ~/.scripts/redshift/relative_change.py + 100
bindsym Mod4+XF86MonBrightnessDown exec python3 ~/.scripts/redshift/relative_change.py - 100



### i3 Commands
bindsym $mod+Shift+r restart
bindsym $mod+Shift+q kill



### Workspace controls
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym Mod4+Left workspace prev
bindsym Mod4+Right workspace next
bindsym $mod+j focus left
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+semicolon focus down
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+semicolon move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split
#bindsym $mod+Shift+space floating toggle
#bindsym $mod+space focus mode_toggle
#bindsym $mod+a focus parent
#bindsym $mod+d focus child
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


